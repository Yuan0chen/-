#include<stdio>
int main(){
    int a;
    int n=0;
    scanf("%d",&a);
    while(a<1000){
        if(a%2==0){
            a=a/2;
            n++;
        }
        else{
            a=(3*a+1)/2;
            n++;
        }
     if(a==1){
         printf("%d",n);
         break;
     }   
    }
    
return 0;    
}
